<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage"
    android:background="@drawable/theme"
    >

    <ImageView
        android:layout_width="104dp"
        android:layout_height="148dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:src="@drawable/background_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="133dp"
        android:layout_height="119dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="124dp"
        android:src="@drawable/background_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="107dp"
        android:layout_height="134dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="108dp"
        android:src="@drawable/background_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logo_white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="@string/registration_title"
                />
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:theme="@style/Logintheme">

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxCornerRadiusBottomEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusBottomStart="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopStart="@dimen/loginTextBoxCorner"
                    app:boxStrokeColor="@android:color/white"
                    app:boxStrokeWidth="3dp"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/fullnameId"
                        android:layout_width="@dimen/boxWidthSmall"
                        android:layout_height="@dimen/boxheightSmall"
                        android:drawableEnd="@drawable/ic_full_name_text"
                        android:hint="@string/full_name_title"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/loginTextSizeSmall" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxCornerRadiusBottomEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusBottomStart="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopStart="@dimen/loginTextBoxCorner"
                    app:boxStrokeColor="@android:color/white"
                    app:boxStrokeWidth="3dp"
                    app:counterMaxLength="20">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/registerUsernameId"
                        android:layout_width="@dimen/boxWidthSmall"
                        android:layout_height="@dimen/boxheightSmall"
                        android:drawableEnd="@drawable/username_white_24dp"
                        android:hint="@string/username_title"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/loginTextSizeSmall" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxCornerRadiusBottomEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusBottomStart="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopStart="@dimen/loginTextBoxCorner"
                    app:boxStrokeColor="@android:color/white"
                    app:boxStrokeWidth="3dp"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/emailId"
                        android:layout_width="@dimen/boxWidthSmall"
                        android:layout_height="@dimen/boxheightSmall"
                        android:drawableEnd="@drawable/ic_email_white"
                        android:hint="@string/email_title"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/loginTextSizeSmall" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxCornerRadiusBottomEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusBottomStart="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopStart="@dimen/loginTextBoxCorner"
                    app:boxStrokeColor="@android:color/white"
                    app:boxStrokeWidth="3dp"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/contactNoId"
                        android:layout_width="@dimen/boxWidthSmall"
                        android:layout_height="@dimen/boxheightSmall"
                        android:drawableEnd="@drawable/ic_phone_white_24dp"
                        android:hint="@string/contact_title"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/loginTextSizeSmall" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxCornerRadiusBottomEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusBottomStart="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopStart="@dimen/loginTextBoxCorner"
                    app:boxStrokeColor="@android:color/white"
                    app:boxStrokeWidth="3dp"
                    
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@android:color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/registerPasswordId"
                        android:layout_width="@dimen/boxWidthSmall"
                        android:layout_height="@dimen/boxheightSmall"
                        android:hint="@string/password_title"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/loginTextSizeSmall" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray"
                    app:boxCornerRadiusBottomEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusBottomStart="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopEnd="@dimen/loginTextBoxCorner"
                    app:boxCornerRadiusTopStart="@dimen/loginTextBoxCorner"
                    app:boxStrokeColor="@android:color/white"
                    app:boxStrokeWidth="3dp"
                    
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@android:color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/confirmPasswordId"
                        android:layout_width="@dimen/boxWidthSmall"
                        android:layout_height="@dimen/boxheightSmall"
                        android:hint="@string/confirm_password_title"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/loginTextSizeSmall" />

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/signUpId"
                    android:layout_width="@dimen/boxWidthSmall"
                    android:layout_height="@dimen/boxheightSmall"
                    android:layout_margin="5dp"
                    android:background="@drawable/login_button_theme"
                    android:text="@string/sign_up_title"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/loginTextSizeSmall" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>