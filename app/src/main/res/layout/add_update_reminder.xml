<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    android:background="@drawable/theme"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:scrollbars="vertical"
    >

    <LinearLayout
        android:id="@+id/reminderNameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <TextView
            android:id="@+id/reminderNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:textSize="@dimen/_12sdp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reminderDetailsLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/reminderNameLayoutId"
        >
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <TextView
            android:id="@+id/reminderDetailsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:textSize="@dimen/_12sdp"
            android:textColor="@android:color/white"
            android:maxHeight="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reminderTimeLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/reminderDetailsLayoutId"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <TextView
            android:id="@+id/reminderTimeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:textSize="@dimen/_12sdp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reminderDateLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/reminderTimeLayoutId"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
        <TextView
            android:id="@+id/reminderDataId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:textSize="@dimen/_12sdp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="end"
        android:padding="@dimen/_5sdp"
        >

        <TextView
            android:id="@+id/cancelId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:text="@string/cancel"
            />
        <TextView
            android:id="@+id/okId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:text="@string/ok"
            android:layout_toRightOf="@id/cancelId"
            android:layout_marginLeft="@dimen/_15sdp"
            />
    </RelativeLayout>

</RelativeLayout>